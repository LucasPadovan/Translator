%h1 Listado de todas las palabras
%table.table.table-bordered
  %tr
    %th Nombre
    %th Acciones
  - @words.each do |word|
    %tr
      %td= link_to word.name, word
      %td.btn-group
        = link_to 'Editar', edit_word_path(word), class: "btn btn-warning"
        = link_to 'Eliminar', word, confirm: '¿Estás seguro que desas eliminar esta palabra?', method: :delete, class: "btn btn-danger"
= link_to 'Agregar palabra', new_word_path, class: "btn btn-primary"